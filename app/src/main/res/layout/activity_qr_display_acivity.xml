<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QrDisplayActivity">

        <ImageView
            android:id="@+id/idIVQrcode"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/qr_code" />


        <TextView
            android:id="@+id/idTextName"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_below="@+id/idIVQrcode"
            android:layout_marginTop="45dp"
            android:text="Encrypted Data" />

        <TextView
            android:id="@+id/idEncodedText"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/idTextName"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp" />

        <Button
            android:id="@+id/idBtnGenerateQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idEncodedText"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:text="@string/generate_qr_code" />

</RelativeLayout>